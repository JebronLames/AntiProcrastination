<!DOCTYPE html>
<html>
<head>
  <title>AntiProcrastination</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<h1> New Task </h1>
<%= form_for :task, url: tasks_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :due %><br>
    <%= f.datetime_select :due, {:ampm=> true} %>
  </p>

  <p>
    <%=f.label :priority %><br>
    <%= f.select(:priority, options_for_select([0, 1, 2, 3, 4, 5]))%>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
<%= link_to 'Back', tasks_path %>
