<h1> Current Tasks </h1> 
<table> 
  <tr> 
    <th> Task </th>
    <th> Description </th>
  </tr>

  <% @tasks.each do |t| %>
    <tr>
      <td><%= t.title %></td>
      <td><%= t.description %></td>
      <td><%= link_to 'Show', task_path(t) %></td>
      <td><%= link_to 'Edit', edit_task_path(t) %></td>
      <td><%= link_to 'Destroy', task_path(t),
                    method: :delete, data: { confirm: 'Are you sure?' } %>
    </tr>
  <% end %>
</table>

