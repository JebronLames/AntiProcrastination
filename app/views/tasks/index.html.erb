<!DOCTYPE html>
<html>
<head>
  <title>AntiProcrastination</title>
</head>
<body>

<h2>  Today is <%= Time.now %> </h2> 

<%= link_to 'Create Task', new_task_path%>
 
  <div class="sorts">
     <%= sortable "title"%> 
     Description 
     <%= sortable "due"%> 
     <%= sortable "priority"%> 
  </div>


  <% @tasks.each do |t| %>
      <div class="square">
      <div class="title"><%= t.title %></div>
      <div class="description"> <%= t.description %> </div>
      Priority: <% if t.priority == 1%>High<% end %><% if t.priority == 2%>Medium<%end %><% if t.priority == 3%>Low<% end %> <br>
      <%= t.due.strftime("%I:%M on %A %m/%d") %> <br>
      <%= link_to 'Show', task_path(t) %>
      <%= link_to 'Edit', edit_task_path(t) %>
      <%= link_to 'Destroy', task_path(t),
                    method: :delete, data: { confirm: 'Are you sure?' } %>
     </div>
  <% end %>  

</body>

