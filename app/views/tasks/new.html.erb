
<div class="container">
<h1> New Task </h1>

<%= form_for :task, url: tasks_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_area :title, :cols => "29", :rows => "1"%>
  </p>

  <p>
    <%= f.label :category %><br>
    <%= f.select(:category, options_for_select(["Social","Work"]))%>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description, :cols => "29", :rows => "5" %>
  </p>

  <p>
    <%= f.label :due %><br>
    <%= f.datetime_select( :due, :ampm=> true, :minute_step => 15 )%>
  </p>

  <p>
    <%=f.label :priority %><br>
    <%= f.select(:priority, options_for_select([["High", 1],["Medium",2],["Low",3]]))%>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
<%= link_to 'Back', tasks_path %>
</div>
